@model FinPortal.Models.Household

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col">
        <div class="form-group">
            <div class="col-md-8">
                <h2 class="">Create Household </h2><hr />
            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4>@Html.LabelFor(model => model.HouseholdName, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.HouseholdName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HouseholdName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>@Html.LabelFor(model => model.Greeting, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.Greeting, new { rows = 10, @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Greeting, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn cb" />
                </div>
            </div>
        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
